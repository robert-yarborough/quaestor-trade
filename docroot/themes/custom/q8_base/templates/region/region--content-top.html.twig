{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
  'navbar',
  'navbar-default',
  'region',
  'region-' ~ region|clean_class,
]
%}

{% if elements %}
  <div class="page-frame">
    <div class="main-header__inner">
      {{ elements.q8_base_branding }}
      <div class="navbar__group">
        <div class="navbar__top--main">

          {{ elements.q8_base_languageswitcher }}

          <div class="header-toggle-btn js-h-toggle-btn" role="button"><span></span><b class="visually-hidden">{{ 'Menu'|t }}</b></div>

          <div class="menu--links js-h-menu-links">
            {{ elements.q8_base_supernav }}
          </div>

          <div class="header-search js-h-search">
            <a href="#" class="header-search__toggle js-h-search-toggle">
              <span class="visually-hidden">{{ 'Search Button'|t }}</span>
              <svg class="q-icon"><use xlink:href="#icon-search"></use></svg>
            </a>
            <div class="header-search__box js-h-search-box">
              {{ elements.q8_base_simplesearchblock }}
            </div>
          </div>
        </div>

        <div class="navbar__bot--main js-h-menu-main">
          {{ elements.q8_base_main_menu }}
          <div class="menu--user">
            {{ elements.q8_base_account_menu }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}
