{#
/**
 * @file
 * Default theme implementation to display a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'layout',
  'layout--onecol',
  'news-block',
  'block-section',
]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content', 'page-frame') }}>
      {% if content.content.field_title[0] %}
        <div class="news-block__title">
          {{ content.content.field_title[0] }}
        </div>
      {% endif %}

      {{ content.content.field_view }}

      {% if content.content.field_button[0] %}
        <div class="news-block__cta">
          {{ content.content.field_button[0]|merge({ '#attributes': { 'class': [ 'btn-primary__dark' ] } }) }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
